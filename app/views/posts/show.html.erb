<% content_for :page_title, @post.title %>

  <div class="container">
    <div class="box">
      <%= sanitize @post.content %>
    </div>
    <%= image_tag(@post.picture_url, width: 600) if @post.picture.present? %>

    <nav class="level is-mobile">
      <!-- Left side -->
      <div class="level-left"></div>
      <!-- Right side -->
      <div class="level-right">
        <p class="level-item">
          <%= link_to "Edit", edit_post_path(@post), class:"button" %>
        </p>
        <p class="level-item">
          <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
        </p>
      </div>
    </nav>
    <br/>
    <br/>
  </div>

  <div class="container">
    <h2 class="subtitle is-5">
      <strong><%= @post.comments.count %>
      </strong>
      Comments
    </h2>
    <br/>
    <%= render @post.comments %>
    <div class="comment-form">
      <hr/>
      <h3 class="subtitle is-4">
        Please leave your comment</h3>
      <%= render 'comments/form' %>
    </div>
  </div>