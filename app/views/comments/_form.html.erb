<%= simple_form_for([@post, @post.comments.build]) do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :name_author, input_html: { class: 'input' }, wrapper: false, label: 'Name', label_html: { class: 'label' } %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :comment_body, input_html: { class: 'textarea' }, wrapper: false, label: 'Comment', label_html: { class: 'label' } %>
  </div>
</div>
<%= f.button :submit, class: "button is-primary" %>
<% end %>